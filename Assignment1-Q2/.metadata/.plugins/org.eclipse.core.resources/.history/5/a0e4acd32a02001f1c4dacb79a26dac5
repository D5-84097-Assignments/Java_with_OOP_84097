import java.util.Scanner;

public class Bill {

	public static void main(String[] args) {
		System.out.println("1.Samosa \n2.Idli \n3.Vadapav \n4.Kachori \n5.Pani puri \n6.Momos \n7.Medu vada \n8.Talipeeth \n9.Dosa \n10.Generate bill");
		Scanner sc = new Scanner(System.in);
		int choice=0;
		int price = 0, bill = 0, quantity=0 ;
		while(choice != 10)
		
		{
			System.out.println("Enter Choice");
			choice = sc.nextInt();
			if(choice == 1)
			{	
				price = 10;
				System.out.println("Enter quantity");
				quantity = sc.nextInt();
				//bill +=price*quantity;
			}
			else if(choice == 2)
			{	
				price = 20;
				System.out.println("Enter quantity");
				quantity = sc.nextInt();
				//bill +=price*quantity;
			}

			else
			{
				System.out.println("Enter correct choice");
			}
			bill += price*quantity;
		}
		System.out.println("Bill Amout - Rs."+ bill);
	}
}
